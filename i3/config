bindsym $mod+$mod2+Control+period exec "$HOME/Videos/i3-video-wallpaper-main/mpv-control.sh seek +1"

# Seek -5 seconds
bindsym $mod+$mod2+Control+j exec "$HOME/Videos/i3-video-wallpaper-main/mpv-control.sh seek -5"

# Seek +5 seconds
bindsym $mod+$mod2+Control+k exec "$HOME/Videos/i3-video-wallpaper-main/mpv-control.sh seek +5"

# Seek -10 seconds
bindsym $mod+$mod2+Control+Left exec "$HOME/Videos/i3-video-wallpaper-main/mpv-control.sh seek -10"

# Seek +10 seconds
bindsym $mod+$mod2+Control+Right exec "$HOME/Videos/i3-video-wallpaper-main/mpv-control.sh seek +10"

# Seek +30 seconds
bindsym $mod+$mod2+Control+Shift+Right exec "$HOME/Videos/i3-video-wallpaper-main/mpv-control.sh seek +30"

# Seek -30 seconds
bindsym $mod+$mod2+Control+Shift+Left exec "$HOME/Videos/i3-video-wallpaper-main/mpv-control.sh seek -30"

# Volume -5
bindsym $mod+$mod2+Control+Down exec "$HOME/Videos/i3-video-wallpaper-main/mpv-control.sh volume -5"

# Volume +5
bindsym $mod+$mod2+Control+Up exec "$HOME/Videos/i3-video-wallpaper-main/mpv-control.sh volume +5"

# Pactl volume down
bindsym $mod+End exec "pactl set-sink-volume @DEFAULT_SINK@ -1%"

# Pactl volume up
bindsym $mod+Home exec "pactl set-sink-volume @DEFAULT_SINK@ +1%"

# MPC volume down
bindsym $mod+Next exec "mpc volume -1"

# MPC volume up
bindsym $mod+Prior exec "mpc volume +1"

bindsym $mod+Shift+m  exec --no-startup-id kitty -e tmux new-session -s Music 'ncmpcpp'
bindsym $mod2+Shift+m exec --no-startup-id kitty -e tmux new-session 'ncmpcpp'
bindsym $mod+Shift+t exec --no-startup-id tmux kill-session -t Music 
bindsym $mod2+Shift+t exec --no-startup-id tmux kill-server 

bindsym $mod2+z exec --no-startup-id sxcs -k | awk '{print $2}' | xclip -sel c

#bindsym $mod2+Control+q exec --no-startup-id skippy-xd
bindsym $mod2+Control+q exec ~/.config/rofi/rofi-window-switcher

